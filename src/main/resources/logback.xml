<configuration>
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-30(%d [%thread]) %-5level %logger [%line] - %msg %xEx{3}%n</pattern>
    </encoder>
  </appender>

  <root>
    <level value="INFO" />
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>